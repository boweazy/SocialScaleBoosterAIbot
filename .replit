# .replit
run = "python3 app.py"
modules = ["python-3.11"]   # ensures Python is available in Autoscale

[env]
PORT = "3000"

[deployment]
deploymentTarget = "autoscale"
# Create a venv so pip can install packages (avoids Nix/system write errors)
build = ["bash","-lc","python3 -m venv venv && source venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"]
run = ["bash","-lc","source venv/bin/activate && venv/bin/gunicorn -w 2 -k gthread -b 0.0.0.0:$PORT app:app"]

[nix]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001
